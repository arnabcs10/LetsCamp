<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                    <img class="image-responsive" src="<%= camp.image%>" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">$9.00/night</h4>
                        <h4><a href="#"><%= camp.name %></a></h4>
                        <p><%= camp.description %></p>
                        <p><em>Submitted by - <%= camp.author.username %></em></p>

                        <% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
                        
                            <form id="delete-form" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" >Delete</button>
                            </form>
                        <%   }   %>
                    </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= camp._id%>/comments/new">Leave a comment</a>
                </div>
                     <hr>               
                    <% camp.comments.forEach(comment=>{ %>
                        <div class="row">
                            <div class="col-med-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p><%= comment.text %></p>
                               <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-xs btn-warning" href="/campgrounds/<%= camp._id %>/comments/<%=comment._id%>/edit/">edit</a>
                                <form id="delete-form" action="/campgrounds/<%= camp._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">delete</button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                       
                       

                    <% }) %>
            </div>
        </div>
    </div>

</div>









<%- include("../partials/footer") %>

